                    }
                },
                "monitoring": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "nutrition": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "preparation": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "priority": {
                    "type": "string"
                },
                "progress": {
                    "type": "string"
                },
                "risks": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "stage": {
                    "$ref": "#/definitions/models.PregnancyStage"
                }
            }
        }
    }
}