{
    "swagger": "2.0",
    "info": {
        "description": "API for tracking horse pregnancies and related information",
        "title": "Hulta Pregnancy App API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/horses": {
            "get": {
                "description": "Get a list of all horses in the system",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "horses"
                ],
                "summary": "Get all horses",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Horse"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Add a new horse to the system",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "horses"
                ],
                "summary": "Create a new horse",
                "parameters": [
                    {
                        "description": "Horse object",
                        "name": "horse",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.Horse"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.Horse"
                        }
                    }
                }
            }
        },
        "/horses/{id}": {
            "get": {
                "description": "Get detailed information about a specific horse",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "horses"
                ],
                "summary": "Get a horse by ID",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Horse ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.Horse"
                        }
                    }
                }
            }
        },
        "/horses/{id}/breeding-costs": {
            "get": {
                "description": "Get all breeding costs for a specific horse",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "breeding"
                ],
                "summary": "Get breeding costs",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Horse ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.BreedingCost"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Add a new breeding cost for a specific horse",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "breeding"
                ],
                "summary": "Add breeding cost",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Horse ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Breeding cost",
                        "name": "cost",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.BreedingCost"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.BreedingCost"
                        }
                    }
                }
            }
        },
        "/horses/{id}/health": {
            "get": {
                "description": "Get comprehensive health assessment for a specific horse",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "Get health assessment",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Horse ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/health.HealthSummary"
                        }
                    }
                }
            }
        },
        "/horses/{id}/health-records": {
            "post": {
                "description": "Add a new health record for a specific horse",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "Add health record",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Horse ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Health record",
                        "name": "record",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.HealthRecord"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.HealthRecord"
                        }
                    }
                }
            }
        },
        "/horses/{id}/pregnancy-guidelines": {
            "get": {
                "description": "Get detailed pregnancy guidelines for a specific horse",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "pregnancy"
                ],
                "summary": "Get pregnancy guidelines",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Horse ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/pregnancy.PregnancyGuidelines"
                        }
                    }
                }
            }
        },
        "/sync": {
            "post": {
                "description": "Synchronize local data with server",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "sync"
                ],
                "summary": "Sync user data",
                "parameters": [
                    {
                        "description": "Sync data",
                        "name": "data",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.SyncData"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.SyncData"
                        }
                    }
                }
            }
        },
        "/sync/restore": {
            "get": {
                "description": "Restore all user data from server",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "sync"
                ],
                "summary": "Restore user data",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.SyncData"
                        }
                    }
                }
            }
        },
        "/sync/status": {
            "get": {
                "description": "Get the last sync time and status",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "sync"
                ],
                "summary": "Get sync status",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/api.SyncStatus"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.SyncStatus": {
            "type": "object",
            "properties": {
                "isUpToDate": {
                    "type": "boolean"
                },
                "lastSync": {
                    "type": "string"
                },
                "pendingSync": {
                    "type": "integer"
                }
            }
        },
        "health.HealthSummary": {
            "type": "object",
            "properties": {
                "lastCheckup": {
                    "type": "string"
                },
                "recentIssues": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.HealthRecord"
                    }
                },
                "totalRecords": {
                    "type": "integer"
                },
                "vaccinationStatus": {
                    "$ref": "#/definitions/health.VaccinationStatus"
                }
            }
        },
        "health.VaccinationStatus": {
            "type": "object",
            "properties": {
                "dueDate": {
                    "type": "string"
                },
                "isUpToDate": {
                    "type": "boolean"
                },
                "lastDate": {
                    "type": "string"
                }
            }
        },
        "models.BreedingCost": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "number"
                },
                "date": {
                    "type": "string"
