                "health": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.HealthRecord"
                    }
                },
                "horses": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.Horse"
                    }
