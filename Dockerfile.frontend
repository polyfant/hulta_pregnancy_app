# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy package.json and install dependencies
COPY frontend-react/package.json frontend-react/pnpm-lock.yaml ./
RUN pnpm install

# Copy the rest of the frontend files
COPY frontend-react/ .

# Create .env file
RUN echo "VITE_AUTH0_DOMAIN=dev-r083cwkcv0pgz20x.eu.auth0.com" > .env && \
    echo "VITE_AUTH0_CLIENT_ID=OBmEol1z4U49r3YI3priDdGbvF5i4O7d" >> .env && \
    echo "VITE_AUTH0_AUDIENCE=https://api.hulta-foaltracker.app" >> .env && \
    echo "VITE_API_URL=https://api.hulta-foaltracker.app" >> .env && \
    echo "VITE_WEBSOCKET_URL=wss://api.hulta-foaltracker.app/ws" >> .env

# Build the application
RUN pnpm build

# Production stage
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY frontend-react/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
