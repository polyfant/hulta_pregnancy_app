# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Install typescript globally
RUN npm install -g typescript

# Copy the entire frontend-react directory
COPY . .

# Move to frontend-react directory
WORKDIR /app/frontend-react

# Install dependencies
RUN npm install

# Create .env file
RUN echo "VITE_AUTH0_DOMAIN=dev-r083cwkcv0pgz20x.eu.auth0.com" > .env && \
    echo "VITE_AUTH0_CLIENT_ID=OBmEol1z4U49r3YI3priDdGbvF5i4O7d" >> .env && \
    echo "VITE_AUTH0_AUDIENCE=https://api.hulta-foaltracker.app" >> .env && \
    echo "VITE_API_URL=https://api.hulta-foaltracker.app" >> .env && \
    echo "VITE_WEBSOCKET_URL=wss://api.hulta-foaltracker.app/ws" >> .env

# Build the application
RUN npm run build

# Production stage
FROM nginx:alpine
COPY --from=builder /app/frontend-react/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
